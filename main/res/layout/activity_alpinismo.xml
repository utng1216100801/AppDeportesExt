        android:text="Acci칩n de subir monta침as, pero siempre por af치n de superaci칩n, como respuesta a un impulso personal distinto en cada uno o por el placer de alcanzar una cima y observar el terreno que se abre ante los ojos."
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_width="377dp"
        android:layout_height="189dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/alpinismo"
        app:layout_constraintBottom_toTopOf="@+id/btnARegresar"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:text="Regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4cbf1b"
        android:textColor="#fff"
        android:id="@+id/btnARegresar" android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>