<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deportesextremosback"
    tools:context=".PrincipalActivity">

    <Button
        android:id="@+id/btnSalto"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Salto Base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFree"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@android:color/holo_purple"
        android:text="Free-Solo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSalto" />

    <Button
        android:id="@+id/btnAlpinismo"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@android:color/holo_green_light"
        android:text="Alpinismo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFree" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="116dp"
        android:layout_height="44dp"
        android:layout_marginTop="172dp"
        android:background="@android:color/holo_red_light"
        android:text="Salir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlpinismo" />

</androidx.constraintlayout.widget.ConstraintLayout>